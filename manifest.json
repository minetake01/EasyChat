{
	"manifest_version": 3,
	"name": "Live Chat Servant",
	"version": "1.0.0",
	"description": "複数の配信プラットフォームで、すばやくチャットができます。",
	"icons": {
    	//"16": "icon/icon16.png",
    	//"48": "icon/icon48.png",
    	//"128": "icon/icon128.png"
	},
	"permissions": [
		"tabs"
	],
	"content_scripts": [
		{
			"matches": ["https://live.nicovideo.jp/*", "https://www.twitch.tv/*", "https://www.showroom-live.com/*", "https://www.openrec.tv/*", "https://www.mildom.com/*", "https://twitcasting.tv/*", "https://0000.studio/*"],
			"js": ["./jquery-3.6.0.min.js", "./streamDetail_getter/streamDetail_getter.js", "./historyViewer/history_viewer.js", "./historyViewer/lib.js", "./chatSender/chat_sender.js", "./chatSender/lib.js"]
		},
		{
			"matches": ["https://live.nicovideo.jp/*"],
			"js": ["./streamDetail_getter/common/niconico.js", "./historyViewer/common/niconico.js", "./chatSender/common/niconico.js"]
		},
		{
			"matches": ["https://www.twitch.tv/*"],
			"js": ["./streamDetail_getter/common/twitch.js", "./historyViewer/common/twitch.js", "./chatSender/common/twitch.js"]
		},
		{
			"matches": ["https://www.showroom-live.com/*"],
			"js": ["./streamDetail_getter/common/showroom.js", "./historyViewer/common/showroom.js", "./chatSender/common/showroom.js"]
		},
		{
			"matches": ["https://www.openrec.tv/*"],
			"js": ["./streamDetail_getter/common/openrec.js", "./historyViewer/common/openrec.js", "./chatSender/common/openrec.js"]
		},
		{
			"matches": ["https://www.mildom.com/*"],
			"js": ["./streamDetail_getter/common/mildom.js", "./historyViewer/common/mildom.js", "./chatSender/common/mildom.js"]
		},
		{
			"matches": ["https://twitcasting.tv/*"],
			"js": ["./streamDetail_getter/common/twicas.js", "./historyViewer/common/twicas.js", "./chatSender/common/twicas.js"]
		},
		{
			"matches": ["https://0000.studio/*"],
			"js": ["./streamDetail_getter/common/f0studio.js", "./historyViewer/common/f0studio.js", "./chatSender/common/f0studio.js"]
		},
		{
			"matches": ["https://www.youtube.com/*"],
			"exclude_globs": ["*://*/*live_chat*"],
			"js": ["./jquery-3.6.0.min.js", "./streamDetail_getter/streamDetail_getter.js", "./streamDetail_getter/common/youtube.js"]
		},
		{
			"matches": ["https://www.youtube.com/*"],
			"include_globs": ["*://*/*live_chat*"],
			"js": ["./jquery-3.6.0.min.js", "./historyViewer/history_viewer.js", "./historyViewer/lib.js", "./historyViewer/common/youtube.js", "./chatSender/chat_sender.js", "./chatSender/lib.js", "./chatSender/common/youtube.js"]
		}
	],
	"background": {
        "service_worker": "./serviceWorker/service_worker.js"
    },
    "commands": {
    	"EasyLiveChat": {
    		"suggested_key": {
	    		"default": "Ctrl+Space"
	    	},
    		"description": "チャットの入力",
			"global": true
    	}
    }
}