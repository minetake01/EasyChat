{
	"manifest_version": 3,
	"name": "EasyLiveChat",
	"version": "1.0.0",
	"description": "配信ページを開かずに、ショートカットキーですばやくチャットができます。",
	"icons": {
    	//"16": "icon/icon16.png",
    	//"48": "icon/icon48.png",
    	//"128": "icon/icon128.png"
	},
	"permissions": [
		"tabs"
	],
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"include_globs": ["*://*/*watch*"],
			"js": ["jquery-3.6.0.min.js", "yt_streamDetail_getter.js"]
		},
		{
			"matches": ["https://live.nicovideo.jp/*"],
			"include_globs": ["*://*/*watch*"],
			"js": ["jquery-3.6.0.min.js", "nico_streamDetail_getter.js"]
		},
		{
			"matches": ["https://www.twitch.tv/*"],
			"js": ["jquery-3.6.0.min.js", "twitch_streamDetail_getter.js"]
		},
		{
			"matches": ["https://www.showroom-live.com/*"],
			"js": ["jquery-3.6.0.min.js", "showroom_streamDetail_getter.js"]
		},
		{
			"matches": ["https://www.openrec.tv/*"],
			"include_globs": ["*://*/*live*"],
			"js": ["jquery-3.6.0.min.js", "openrec_streamDetail_getter.js"]
		},
		{
			"matches": ["https://www.mildom.com/*"],
			"js": ["jquery-3.6.0.min.js", "mildom_streamDetail_getter.js"]
		},
		{
			"matches": ["https://twitcasting.tv/*"],
			"js": ["jquery-3.6.0.min.js", "twicas_streamDetail_getter.js"]
		},
		{
			"matches": ["https://0000.studio.com/*"],
			"js": ["jquery-3.6.0.min.js", "f0studio_streamDetail_getter.js"]
		}
	],
	"background": {
        "service_worker": "service_worker.js"
    },
    "commands": {
    	"EasyLiveChat": {
    		"suggested_key": {
	    		"default": "Ctrl+Space"
	    	},
    		"description": "チャットの入力",
			"global": true
    	}
    },
	"web_accessible_resources": [
		{
			"resources": ["selectChannel/selectChannel.html"],
			"matches": ["<all_urls>"]
		}
	]
}